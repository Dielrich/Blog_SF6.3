{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block main %}

<div class="row mt-5">
    <div class="col-12 col-lg-8 offset-lg-2 bg-primary rounded px-2 px-lg-5 py-2 my-5">    

        <h1 class="h2 col-12 text-primary text-center my-4">Connexion</h1>

        <form method="post">

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-4" autocomplete="email" required autofocus>

            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control mb-4" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-outline-info w-100 my-4" type="submit">Se Connecter</button>

            <a href="{{ path('app_main_home') }}" class="btn w-100 btn-outline-light w-100 mb-4">Annuler</a>  

            <div class="col-12 mb-4">
                <p>Pour vous inscrire : <a href="{{ path('app_register') }}" class="text-decoration-none link-primary">cliquez-ici</a></p>                
            </div>

        </form>

    </div>
</div>    
{% endblock %}