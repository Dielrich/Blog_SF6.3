{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block main %}
    <h1 style="color: lime;">{{ post.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ post.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Date de cr√©ation</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de modification</th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row justify-content-center align-items-center">
        <div class="col-2">
            {{ include('posts/_delete_form.html.twig') }}
        </div>
        <div class="col-2">
            <a class="btn btn-warning my-2" href="{{ path('app_posts_edit', {'slug': post.slug}) }}">Modifier</a>
        </div>
        <div class="col-2">
            <a class="btn btn-primary my-2" href="{{ path('app_posts_index') }}">Retour au sommaire</a>
        </div>
    </div>
{% endblock %}
